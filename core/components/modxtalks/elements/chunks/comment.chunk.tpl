<div class="mtComment" data-index="[[+index]]" data-idx="[[+idx]]">
	[[+timeMarker]]
	<div class="post hasControls[[+deleted]]" id="comment-[[+id]]" data-id="[[+id]]" data-memberid="[[+userId]]">
		<div class="avatar"[[+hideAvatar]]><img src="[[+avatar]]" alt="" class="avatar" /></div>
		<div class="postContent thing">
			<div class="postHeader">
				<div class="info">
					<h3>[[+name]]</h3>
					<a href="[[+link]]" class="time" title="[[+timeago]]">[[+funny_date]]</a>
					<span class="group"></span>
				</div>
				<div class="controls">
					<span class="editedBy"><span title="[[+funny_edit_date]]">[[+funny_edit_date]]</span> [[+edit_name]]</span>
					<a href="[[+link_reply]]" title="[[+quote]]" class="control-quote">[[+quote]]</a>
					[[+user]]
				</div>
			</div>
			<div class="postBody">
				[[+content]]
			</div>
			[[+like_block]]
			[[+user_info]]
		</div>
	</div>
</div>
